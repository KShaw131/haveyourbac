<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myTabBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3498db"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/myTabHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uberButton"
        android:layout_alignParentTop="true"
        android:text="My Tab"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#34495e"
        android:textSize="30sp" />

    <Button
        android:id="@+id/chooseDrinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTabHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Choose Drink" />

    <TextView
        android:id="@+id/bacValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bacLevelLabel"
        android:layout_centerHorizontal="true"
        android:text="0.00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/bacLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseDrinkButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="BAC Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#34495e"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/uberButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/chooseDrinkButton"
        android:contentDescription="uber button"
        android:scaleType="fitXY"
        android:src="@drawable/uber_logo" />

    <Button
        android:id="@+id/closeMe"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:minHeight="100dip"
        android:text="@string/close_tab" />

    <Button
        android:id="@+id/reorderDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/chooseDrinkButton"
        android:layout_marginTop="0dp"
        android:text="Reorder Last Drink" />

    <TextView
        android:id="@+id/lastDrinkHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reorderDrink"
        android:text="Last Drink:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/lastDrinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lastDrinkHeader"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lastDrinkDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lastDrinkName"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lastDrinkAlch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lastDrinkDetails"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/customButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chooseDrinkButton"
        android:layout_alignParentBottom="true"
        android:minHeight="90dp"
        android:text="@string/add_custom_drink" />

</RelativeLayout>